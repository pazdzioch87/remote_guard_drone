<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.dji.sdk.sample.internal.utils.VideoFeedView
                android:id="@+id/video_view_primary_video_feed"
                style="@style/main_camera_view"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="30dp" />

            <com.dji.sdk.sample.internal.utils.VideoFeedView
                android:id="@+id/video_view_fpv_video_feed"
                android:visibility="gone"
                style="@style/main_camera_view"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/video_view_primary_video_feed"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/edit_live_show_url_input"
                android:layout_below="@+id/video_view_fpv_video_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />

            <Button
                android:id="@+id/btn_start_live_show"
                style="@style/common_button"
                android:layout_below="@id/edit_live_show_url_input"
                android:layout_toLeftOf="@+id/btn_stop_live_show"
                android:text="Start Live Show" />

            <Button
                android:id="@+id/btn_stop_live_show"
                style="@style/common_button"
                android:layout_below="@id/edit_live_show_url_input"
                android:layout_toRightOf="@+id/btn_start_live_show"
                android:text="Stop Live Show" />

            <Button
                android:id="@+id/btn_sound_on"
                style="@style/common_button"
                android:layout_below="@id/btn_start_live_show"
                android:layout_toLeftOf="@id/btn_sound_off"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Sound On" />

            <Button
                android:id="@+id/btn_sound_off"
                style="@style/common_button"
                android:layout_below="@id/btn_stop_live_show"
                android:layout_toRightOf="@+id/btn_sound_on"
                android:text="Sound Off" />

            <ToggleButton
                android:id="@+id/btn_start_simulator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Simulator"
                android:textOff="Start Simulator"
                android:textOn="Stop Simulator"
                android:layout_marginTop="10dp"
                style="@style/common_button"
                android:layout_below="@+id/btn_sound_on"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_take_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Off"
                style="@style/common_button"
                android:layout_below="@id/btn_start_simulator"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_landing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landing"
                style="@style/common_button"
                android:layout_toRightOf="@+id/btn_take_off"
                android:layout_marginTop="10dp"/>

            <com.dji.sdk.sample.internal.utils.OnScreenJoystick
                android:id="@+id/directionJoystickRight"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/joystick_bg"/>

            <com.dji.sdk.sample.internal.utils.OnScreenJoystick
                android:id="@+id/directionJoystickLeft"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/joystick_bg"/>

        </RelativeLayout>
    </ScrollView>
</merge>